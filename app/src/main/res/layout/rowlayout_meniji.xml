<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:id="@+id/elementOzadje">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MojaSiva"
        android:id="@+id/elementVrste"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="TODO"
            android:src="@drawable/meni"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:background="@android:color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="imeMenija"
            android:id="@+id/txtNaslov"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="hrana"
            android:id="@+id/txtSeznamhrane"
            android:textColor="#000000"
            android:maxWidth="40dp"
            android:layout_below="@+id/txtNaslov"
            android:layout_alignStart="@+id/txtNaslov" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 â‚¬"
            android:id="@+id/txtCena"
            android:background="@android:color/white"
            android:layout_below="@+id/icon"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="pijaca"
            android:id="@+id/txtSeznamPijace"
            android:textColor="#000000"
            android:maxWidth="40dp"
            android:layout_below="@+id/txtSeznamhrane"
            android:layout_alignStart="@+id/txtSeznamhrane"
            android:layout_marginTop="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/btnMinus"
            android:textStyle="bold"
            android:background="#ffffff"
            android:layout_alignTop="@+id/btnPlus"
            android:layout_toStartOf="@+id/btnPlus"
            android:layout_marginRight="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/btnPlus"
            android:textStyle="bold"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10x"
            android:id="@+id/txtKolicina"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/btnMinus"
            android:layout_toStartOf="@+id/btnMinus" />
    </RelativeLayout>

</RelativeLayout>
