<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:id="@+id/elementOzadje">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/elementVrste"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:src="@drawable/meni"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="imeMenija"
            android:id="@+id/txtNaslov"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="hrana"
            android:id="@+id/txtSeznamhrane"
            android:textColor="#000000"
            android:maxWidth="40dp"
            android:layout_below="@+id/txtNaslov"
            android:layout_alignStart="@+id/txtNaslov"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 â‚¬"
            android:id="@+id/txtCena"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:layout_alignTop="@+id/txtNaslov"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="pijaca"
            android:id="@+id/txtSeznamPijace"
            android:textColor="#000000"
            android:maxWidth="40dp"
            android:layout_below="@+id/txtSeznamhrane"
            android:layout_alignStart="@+id/txtSeznamhrane" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btnMinus"
            android:textStyle="bold"
            android:layout_below="@+id/btnPlus"
            android:layout_alignStart="@+id/btnPlus" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnPlus"
            android:textStyle="bold"
            android:layout_above="@+id/txtSeznamPijace"
            android:layout_toStartOf="@+id/txtCena"
            android:layout_marginRight="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3x"
            android:id="@+id/txtKolicina"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_above="@+id/txtSeznamhrane"
            android:layout_toStartOf="@+id/btnPlus"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>
