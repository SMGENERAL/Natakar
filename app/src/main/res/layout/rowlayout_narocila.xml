<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:id="@+id/elementOzadje">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/elementVrste"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:src="@drawable/order"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:id="@+id/txtNaslov"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ŠT. Menijev: 0"
            android:id="@+id/txtStMenijev"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_alignTop="@+id/txtNaslov"
            android:layout_toEndOf="@+id/txtNaslov"
            android:layout_marginTop="3dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="meniji"
            android:id="@+id/txtSeznamMenijev"
            android:textColor="#000000"
            android:layout_below="@+id/txtCena"
            android:layout_alignStart="@+id/txtNaslov"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0 €"
            android:id="@+id/txtCena"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:layout_alignTop="@+id/txtNaslov"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
